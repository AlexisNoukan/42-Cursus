#include "libft.h"
#include <stddef.h>
#include <string.h>

size_t  ft_strlcat(char *dst, const char *src, size_t dstsize)
{
	size_t	i;
	size_t	j;

	i = ft_strlen(dst);
	j = 0;
    if(dstsize == 0 || dstsize <= i)
        return(dstsize + ft_strlen((char *)src));
    while (src[j] && i < dstsize - 1)
	{
		dst[i] = src[j];
		j++;
        i++;
	}
	dst[j + i] = '\0';
	return (i + ft_strlen(src));
}
